{
  "name": "ng-block-ui",
  "version": "2.0.0-beta.2",
  "description": "Angular Block UI",
  "main": "./index.js",
  "typings": "./index.d.ts",
  "scripts": {
    "start": "watchman lib 'npm run build:tsc && cp -r dist/bundles dev'",
    "build": "npm run build:ngc && npm run build:tsc && npm run build:copy",
    "build:copy": "cp -r package.json .npmignore README.md LICENSE ./dist",
    "build:ngc": "node_modules/.bin/ngc -p tsconfig.json && echo 'Build Complete'",
    "build:tsc": "node_modules/typescript/bin/tsc -p tsconfig-umd.json && echo 'Build Complete'",
    "release:major": "changelog -M && git add *.md && git commit -m 'updated CHANGELOG.md' && npm version major && git push origin master && git push origin --tags",
    "release:minor": "changelog -m && git add *.md && git commit -m 'updated CHANGELOG.md' && npm version minor && git push origin master && git push origin --tags",
    "release:patch": "changelog -p && git add *.md && git commit -m 'updated CHANGELOG.md' && npm version patch && git push origin master && git push origin --tags",
    "test": "npx karma start karma.conf.js",
    "test:watch": "npx karma start karma.conf.js --singleRun=false"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kuuurt13/ng-block-ui.git"
  },
  "keywords": [
    "Angular",
    "Angular 4",
    "Angular 5",
    "Loading",
    "Block UI",
    "Spinner"
  ],
  "author": "kuuurt13",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kuuurt13/ng-block-ui/issues"
  },
  "homepage": "https://github.com/kuuurt13/ng-block-ui#readme",
  "dependencies": {},
  "devDependencies": {
    "@angular/common": "6.0.7",
    "@angular/compiler": "6.0.7",
    "@angular/compiler-cli": "6.0.7",
    "@angular/core": "6.0.7",
    "@angular/forms": "6.0.7",
    "@angular/http": "6.0.7",
    "@angular/platform-browser": "6.0.7",
    "@angular/platform-browser-dynamic": "6.0.7",
    "@angular/router": "6.0.7",
    "@types/jasmine": "^2.5.43",
    "babel-polyfill": "^6.23.0",
    "es6-shim": "^0.35.1",
    "generate-changelog": "^1.7.1",
    "html-webpack-plugin": "^2.22.0",
    "jasmine": "^2.5.3",
    "jasmine-core": "^2.4.1",
    "karma": "^1.1.0",
    "karma-chrome-launcher": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "raw-loader": "^0.5.1",
    "reflect-metadata": "^0.1.3",
    "rxjs": "^6.2.1",
    "ts-loader": "^0.8.2",
    "tslint": "^3.13.0",
    "tslint-loader": "^2.1.5",
    "typescript": "2.7.2",
    "typings": "^1.3.1",
    "watchman": "^0.1.8",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "zone.js": "^0.8.26"
  }
}
